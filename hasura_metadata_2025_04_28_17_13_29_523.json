    "query_collections": [
      {
        "name": "allowed-queries",
        "definition": {
          "queries": [
            {
              "name": "GetRoomsByHotel",
              "query": "query GetRoomsByHotel($hotel_id: Int!) {\r\n  rooms(where: {hotel_id: {_eq: $hotel_id}}) {\r\n    room_id\r\n    room_number\r\n    description\r\n    price\r\n    availability\r\n    status\r\n    room_type {\r\n      type_name\r\n    }\r\n  }\r\n}"
            },
            {
              "name": "GetAllLocations",
              "query": "query GetAllLocations {\r\n  locations {\r\n    location_id\r\n    location_name\r\n    description\r\n  }\r\n}"
            },
            {
              "name": "GetBookingsByRoom",
              "query": "query GetBookingsByRoom($room_id: Int!) {\r\n  bookings(where: {room_id: {_eq: $room_id}}) {\r\n    booking_id\r\n    guest_id\r\n    check_in_date\r\n    check_out_date\r\n    status\r\n    total_amount\r\n    payment_status\r\n  }\r\n}"
            },
            {
              "name": "GetRoomDetails",
              "query": "query GetRoomDetails($room_id: Int!) {\r\n  rooms_by_pk(room_id: $room_id) {\r\n    room_id\r\n    room_number\r\n    description\r\n    price\r\n    availability\r\n    status\r\n    room_type {\r\n      type_name\r\n      description\r\n    }\r\n    hotel {\r\n      hotel_name\r\n      location {\r\n        location_name\r\n      }\r\n    }\r\n    bookings {\r\n      check_in_date\r\n      check_out_date\r\n    }\r\n  }\r\n}"
            },
            {
              "name": "CreateGuest",
              "query": "mutation MyMutation($address1: String = \"\", $birthdate1: date = \"\", $contact_info1: jsonb = \"\", $full_name: String = \"\", $guest_id: Int!) {\r\n  insert_guests_one(object: {address: $address1, birthdate: $birthdate1, contact_info: $contact_info1, full_name: $full_name, guest_id: $guest_id}) {\r\n    address\r\n    birthdate\r\n    contact_info\r\n    full_name\r\n    guest_id\r\n  }\r\n}"
            },
            {
              "name": "GetAllBookings",
              "query": "query MyQuery {\r\n  bookings {\r\n    booking_id\r\n    room {\r\n      description\r\n      hotel {\r\n        hotel_name\r\n      }\r\n      price\r\n    }\r\n    check_in_date\r\n    check_out_date\r\n    guest_id\r\n    payment_status\r\n    total_amount\r\n  }\r\n}"
            },
            {
              "name": "GetGuestBookings",
              "query": "query GetGuestBookings($guest_id: Int!) {\r\n  bookings(where: { guest_id: { _eq: $guest_id } }) {\r\n    booking_id\r\n    room_id\r\n    check_in_date\r\n    check_out_date\r\n    status\r\n    total_amount\r\n    payment_status\r\n  }\r\n}"
            },
            {
              "name": "GetAllUsers",
              "query": "query MyQuery {\r\n  users(where: {role: {_eq: \"user\"}}) {\r\n    id\r\n    username\r\n    role\r\n    created_at\r\n  }\r\n}"
            },
            {
              "name": "GetGuestProfile",
              "query": "query GetGuestProfile($guest_id: Int!) {\r\n  guests_by_pk(guest_id: $guest_id) {\r\n    full_name\r\n    birthdate\r\n    contact_info\r\n    address\r\n  }\r\n}"
            },
            {
              "name": "GetGuestTransactions",
              "query": "query GetGuestTransactions($guest_id: Int!) {\r\n  payments(where: {guest_id: {_eq: $guest_id}}) {\r\n    payment_id\r\n    amount\r\n    payment_date\r\n    payment_status\r\n    payment_method\r\n  }\r\n}"
            },
            {
              "name": "GetGuestDetails",
              "query": "query GetGuestDetails($guest_id: Int!) {\r\n  guests_by_pk(guest_id: $guest_id) {\r\n    guest_id\r\n    full_name\r\n    address\r\n    birthdate\r\n    contact_info\r\n  }\r\n  bookings(where: { guest_id: { _eq: $guest_id } }) {\r\n    booking_id\r\n    check_in_date\r\n    check_out_date\r\n    status\r\n    total_amount\r\n  }\r\n  payments {\r\n    payment_id\r\n    booking_id\r\n    amount\r\n    payment_date\r\n    payment_status\r\n    payment_method\r\n  }\r\n}"
            },
            {
              "name": "GetAllHotels",
              "query": "query GetAllHotels {\r\n  hotels {\r\n    hotel_id\r\n    hotel_name\r\n    description\r\n    location {\r\n      location_id\r\n      location_name\r\n    }\r\n    rooms_aggregate {\r\n      aggregate {\r\n        min {\r\n          price\r\n        }\r\n      }\r\n    }\r\n  }\r\n}"
            },
            {
              "name": "CreateBooking",
              "query": "mutation CreatePayment(\n  $booking_id: Int!\n  $amount: numeric!\n  $payment_method: String!\n) {\n  insert_payments_one(object: {\n    booking_id: $booking_id,\n    amount: $amount,\n    payment_method: $payment_method,\n    payment_status: \"Pending\",\n    payment_date: \"now()\"\n  }) {\n    payment_id\n  }\n}"
            }
          ]
        }
